{
  "name": "bugbug-recorder-clone",
  "version": "1.0.0",
  "type": "module",
  "description": "Chrome Recorder extension, equivalent to BugBug.io recorder",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "build:check": "vue-tsc --noEmit",
    "preview": "vite preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "release": "release-it",
    "format": "prettier --write .",
    "test": "vitest",
    "prepare": "husky"
  },
  "keywords": [
    "chrome-extension",
    "recorder",
    "testing"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "vue": "^3.3.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@types/chrome": "^0.0.260",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@unocss/reset": "^0.63.6",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vue": "^10.6.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jsdom": "^24.1.3",
    "lint-staged": "^15.2.11",
    "prettier": "^3.6.2",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.48.0",
    "unocss": "^0.63.6",
    "vite": "^5.1.0",
    "vitest": "^4.0.14",
    "vue-tsc": "^3.1.5"
  }
}
